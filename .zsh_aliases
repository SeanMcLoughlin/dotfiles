alias al="vim ~/.zsh_aliases"
alias sal="source ~/.zsh_aliases"


#########################
# Environment Variables #
#########################

# To get Xserver to display windows with WSL2
# https://stackoverflow.com/questions/43397162/show-matplotlib-plots-and-other-gui-in-ubuntu-wsl1-wsl2
# export DISPLAY=`grep -oP "(?<=nameserver ).+" /etc/resolv.conf`:0.0
if type "nvim" &> /dev/null; then
	export EDITOR=nvim
else
	export EDITOR=vim
fi

#####################
# Command overrides #
#####################
alias h="history"
alias rp="realpath"
alias xc="xclip"
alias v="nvim"

#######################
# cd backwards with , #
#######################
alias ,="cd .."
alias ,,="cd ../.."
alias ,,,="cd ../../.."
alias ,,,,="cd ../../../.."
alias ,,,,,="cd ../../../../.."

# Aliases that I don't want committed to a public repository
source ~/.private_aliases
