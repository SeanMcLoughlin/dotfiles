set $ws1 "1: TTY"
## Browser
set $ws2 "2: WEB"
## Lab
set $ws3 "3: LAB"
## Media
set $ws4 "4: MED"
## System
set $ws5 "5: SYS"
## Mailing
set $ws6 "6: COM"
## Doc
set $ws7 "7: DOC"
#set $ws8 mail
#set $ws9 "9"
set $ws10 "10: MON"

