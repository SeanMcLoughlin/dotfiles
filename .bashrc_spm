alias cfg="vim ~/.bashrc_spm"
alias scfg="source ~/.bashrc"
pathappend() {
  for ARG in "$@"
  do
  if [ -d "$ARG" ] && [[ ":$PATH:" != *":$ARG:"*  ]]; then
    PATH="${PATH:+"$PATH:"}$ARG"
  fi
  done
}
export pathappend
pathprepend() {
  for ARG in "$@"
  do
  if [ -d "$ARG" ] && [[ ":$PATH:" != *":$ARG:"*  ]]; then
    PATH="$ARG:${PATH:+"$PATH:"}"
  fi
  done
}
export pathprepend

pathappend /tools_risc/common/bin
pathprepend ~/bin
pathprepend ~/bin/bin  # Vim installed itself weirdly like this
